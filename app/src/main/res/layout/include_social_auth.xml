<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="32dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/google"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_button_stroke"
        android:backgroundTint="@color/blue"
        android:clickable="true"
        android:drawableStart="@drawable/ic_drawable_google"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingHorizontal="14dp"
        android:text="@string/enter_with_google"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/facebook"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_button_stroke"
        android:backgroundTint="@color/com_facebook_blue"
        android:clickable="true"
        android:drawableStart="@drawable/ic_drawable_facebook"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingHorizontal="14dp"
        android:text="@string/enter_with_facebook"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/github"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_button_stroke"
        android:backgroundTint="@color/gray_light"
        android:clickable="true"
        android:drawableStart="@drawable/ic_drawable_github"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingHorizontal="14dp"
        android:text="@string/enter_with_github"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/numberPhone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/background_button_stroke"
        android:backgroundTint="@color/green"
        android:clickable="true"
        android:drawableStart="@drawable/ic_drawable_phone"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingHorizontal="16dp"
        android:text="@string/enter_with_number"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        tools:ignore="RtlSymmetry" />

</androidx.appcompat.widget.LinearLayoutCompat>