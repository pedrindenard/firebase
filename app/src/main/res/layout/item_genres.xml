<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/genreImage"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/gray_light" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/genreImageGradient"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:alpha="0.6"
        android:scaleType="centerCrop"
        android:src="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/genreImage"
        app:layout_constraintEnd_toEndOf="@+id/genreImage"
        app:layout_constraintStart_toStartOf="@+id/genreImage"
        app:layout_constraintTop_toTopOf="@+id/genreImage" />

    <TextView
        android:id="@+id/genreName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/genreImageGradient"
        app:layout_constraintEnd_toEndOf="@+id/genreImageGradient"
        app:layout_constraintStart_toStartOf="@+id/genreImageGradient"
        app:layout_constraintTop_toTopOf="@+id/genreImageGradient" />

</androidx.constraintlayout.widget.ConstraintLayout>