<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="loginTabSelect" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/stellar_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="loginTabUnselect" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/stellar_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ratingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray_night</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="menuItemSelected" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/stellar_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_menu_movie</item>
    </style>

    <style name="menuItemUnselected" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/stellar_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="genderTabLayout" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/stellar_bold</item>
    </style>

    <style name="navigationDrawer" parent="Theme.AppCompat">
        <item name="android:listDivider">@color/white</item>
        <item name="android:textColorSecondary">@color/yellow_dark</item>
    </style>

    <style name="imageViewLargeRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="imageViewMediumRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16%</item>
    </style>

    <style name="imageViewSmallRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>

</resources>