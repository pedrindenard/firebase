<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav"
    app:startDestination="@+id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.pdm.firebasestoragedatabase.feature.presentation.fragment.login.SignInFragment"
        android:label="SignInFragment"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_recoveryFragment"
            app:destination="@id/recoveryFragment"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.pdm.firebasestoragedatabase.feature.presentation.fragment.register.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up">
        <argument
            android:name="value"
            android:defaultValue="@null"
            app:argType="com.pdm.firebasestoragedatabase.feature.domain.model.UserGoogle"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/recoveryFragment"
        android:name="com.pdm.firebasestoragedatabase.feature.presentation.fragment.recovery.RecoveryFragment"
        android:label="RecoveryFragment"
        tools:layout="@layout/fragment_recovery" />

</navigation>